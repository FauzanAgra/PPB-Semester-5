<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".PaymentActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PEMBAYARAN"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="20dp"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:fontFamily="@font/pxbold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Total Transaksi"
        android:padding="5dp"
        android:fontFamily="@font/pmedium"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/editTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/pregular"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Bayar"
        android:padding="5dp"
        android:fontFamily="@font/pmedium"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/editBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/pregular"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="BAYAR"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardNota"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOTA"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textSize="20dp"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:fontFamily="@font/pxbold"
                />

            <TextView
                android:layout_below="@id/tvNota"
                android:id="@+id/tvTotalTrx"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Total Transaksi"
                android:padding="5dp"
                android:fontFamily="@font/pmedium" />
            <TextView
                android:id="@+id/edTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvTotalTrx"
                android:layout_below="@+id/tvNota"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/pregular"
                android:text="Rp.               0"
                android:gravity="end" />

            <TextView
                android:layout_below="@id/tvTotalTrx"
                android:id="@+id/tvBayar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="Cash"
                android:padding="5dp"
                android:fontFamily="@font/pmedium" />
            <TextView
                android:id="@+id/edBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvTotalTrx"
                android:layout_below="@+id/edTotal"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/pregular"
                android:text="Rp.               0"
                android:gravity="end" />

            <TextView
                android:layout_below="@id/tvBayar"
                android:id="@+id/tvKembalian"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="Kembalian"
                android:padding="5dp"
                android:fontFamily="@font/pmedium" />
            <TextView
                android:id="@+id/edKembalian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvKembalian"
                android:layout_below="@+id/edBayar"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/pregular"
                android:text="Rp.               0"
                android:gravity="end" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terima Kasih Telah Beberlanja"
                android:layout_below="@id/tvKembalian"
                android:fontFamily="@font/pregular"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal" />



        </RelativeLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>