<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash"
    android:background="@color/primary"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splashimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:foregroundGravity="center"
        android:src="@drawable/img_splash"
        tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/titleSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splashimg"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/pxbold"
            android:text="ZANTECH.ID"
            android:textColor="#1F2020"
            android:textSize="30dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleSplash"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/pmedium"
        android:layout_centerHorizontal="true"
        android:text="Create By Fauzan Agra"
        android:layout_marginBottom="10dp"
        android:textColor="#1F2020" />

</RelativeLayout>