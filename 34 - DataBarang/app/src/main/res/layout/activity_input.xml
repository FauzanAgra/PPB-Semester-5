<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".InputActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kode Barang"
        android:padding="5dp"
        android:fontFamily="@font/pmedium"
        />

    <EditText
        android:id="@+id/editKodeBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Barang"
        android:padding="5dp"
        android:fontFamily="@font/pmedium"
        />

    <EditText
        android:id="@+id/editNamaBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stok Barang"
        android:padding="5dp"
        android:fontFamily="@font/pmedium"
        />

    <EditText
        android:id="@+id/editStokBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/textHargaBeli"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Harga Beli"
            android:padding="5dp"
            android:fontFamily="@font/pmedium"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/editHargaBeli"
            android:layout_below="@id/textHargaBeli"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textHargaJual"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textHargaBeli"
            android:text="Harga Jual"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:fontFamily="@font/pmedium"
            />

        <EditText
            android:id="@+id/editHargaJual"
            android:layout_below="@id/textHargaJual"
            android:layout_toRightOf="@id/editHargaBeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>



</LinearLayout>